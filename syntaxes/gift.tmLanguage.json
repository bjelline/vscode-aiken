{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "gift",
	"scopeName": "source.gift",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#title"
		},
		{
			"include": "#category"
		},
		{
			"include": "#question"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.double-slash",
			"begin": "(^[ \\t]+)?((//)+)",
			"end": "(?=^)"
		},
		"title": {
			"name": "markup.heading",
			"begin": "\\s*(::)\\s*(.*?)",
			"end": "\\::"
		},
		"category": {
			"captures": {
				"1": {
					"name": "meta.declaration"
				},
				"2": {
					"name": "markup.bold"
				}
			},
			"begin": "(^[ \\t]+)?((^\\s*[$]CATEGORY:))",	
			"end": "(?=^)",
			"patterns": [
				{
					"name": "entity.name",
					"begin": ".*",
					"end": "(?=^)"
				}
			]
			
		},
		"question": {
			"name": "meta.block",
			"begin": "(?<!\\\\)\\{",
			"beginCaptures": {
				"0": {
					"name": "meta.block.start"
				}
			},
			"end": "(?<!\\\\)\\}",
			"endCaptures": {
				"0": {
					"name": "meta.block.end"
				}
			},
			"patterns": [
				{
					"include": "#numerical-question"
				},
				{
					"include": "#feedback"
				},
				{
					"include": "#correct-answer-char"
				},
				{
					"include": "#incorrect-answer-char"
				},
				{
					"include": "#plain-correct-answer"
				},
				{
					"include": "#correct-answer"
				},
				{
					"include": "#incorrect-answer"
				},
				{
					"include": "#partial-answer"
				},
				{
					"include": "#answer"
				}
			]
		},
		"numerical-question": {
			"name": "constant.language",
			"match": "(?<={)#",
			"patterns": [
				{
					"include": "#math-range"
				},
				{
					"include": "#tolerance"
				}
			]
		},
		"correct-answer-char": {
			"name": "punctuation.definition",
			"match": "(?<=[^\\\\])\\="
		},
		"incorrect-answer-char": {
			"name": "punctuation.definition",
			"match": "(?<=[^\\\\])\\~"
		},
		"partial-answer": {
			"name": "constant.numeric",
			"begin": "(?<=[=~])\\s*%\\s*(.*?)",
			"end": "\\%"
		},
		"plain-correct-answer": {
			"name": "variable",
			"begin": "(?<={|{#)(.*?)",
			"end": "(?<![\\\\])(?=[#:=~{}])",
			"patterns": [
				{
					"include": "#true-false-question"
				}
			]
		},
		"correct-answer": {
			"name": "variable",
			"begin": "(?<=[^\\\\])((?<=[=])(.*?))",
			"end": "(?<![\\\\])(?=[#:=~{}])",
			"patterns": [
				{
					"include": "#partial-answer"
				}
			]
		},
		"incorrect-answer": {
			"name": "string",
			"begin": "(?<=[^\\\\])(?<=[~])(.*?)",
			"end": "(?<![\\\\])(?=[#:=~{}])",
			"patterns": [
				{
					"include": "#partial-answer"
				}
			]
		},
		"tolerance": {
			"name": "constant.numeric",
			"match": "\\:[0-9]+[.]?([0-9]+)?"
		},
		"true-false-question": {
			"name": "constant.language.boolean",
			"match": "\\b(?i)(T|F|TRUE|FALSE)\\b"
		},
		"feedback": {
			"name": "comment.line.number-sign",
			"begin": "\\#\\s*(.*?)",
			"end": "(?<![\\\\])(?=[~={}#])"
		},
		"math-range": {
			"name": "keyword.operator",
			"match": "\\.\\."
		}

	}
}